{
  "compilerOptions": {
    "outDir": "dist",
    "skipLibCheck": true,
    "downlevelIteration": true,
    "noPropertyAccessFromIndexSignature": false,
    "lib": [
      "ES2021.String",
      "dom"
    ],
    "target": "es6",
    "paths": {
      "monaco-editor": ["./node_modules/monaco-editor/esm/vs/editor/editor.api"],
      "vscode-textmate": ["./node_modules/vscode-textmate/release/main"],
      "vscode-oniguruma": ["./node_modules/vscode-oniguruma/main"],
    }
  },
  "moduleResolution":"nodenext",
  "include": [
    "grammars/**/*.ts",
    "test/config/**/*.ts",
    "test/testUtils.ts",
    "test/generateMonarchTokenizations.ts",
  ],
  "exclude": [
    "grammars/**/*.spec.ts"
  ]
}